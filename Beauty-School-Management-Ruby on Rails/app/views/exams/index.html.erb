<% provide(:title, 'Exams') %>

<h2>
  <%= link_to gravatar_for(current_user, size: 50), current_user %> <%= current_user.school_users.first.school.name %>'s Exams
</h2>

<div class="row">
  <div class="col-md-2 col-md-offset-4">
    <% if school_admin?(current_user) %>
      <%= link_to new_exam_path, remote: true do %>
          <button class="btn btn-lg btn-primary">New Exam</button>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-2" id="exam-form" style="display:none;"></div>
</div>

<div class="row">
  <div class="col-md-12 col-md-offset-1" id="exams"><%= render @exams %></div>
</div>