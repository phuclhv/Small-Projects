<% provide(:title, 'Enroll Student') %>

<h1>Student Enrollment</h1>
  <!-- See: http://www.saalonmuyo.com/2010/01/27/using-form_tag-in-ruby-on-rails/ -->
  
<%= form_tag(admin_tasks_enrollment_path, method: 'post', multipart: false) do %>
  <!-- User section -->
  <%= label_tag "first_name" %>
  <%= text_field_tag "first_name" %>

  <%= label_tag "last_name" %>
  <%= text_field_tag "last_name" %>
  
  <%= label_tag "email" %>
  <%= text_field_tag "email" %>
  
  <%= label_tag "password" %>
  <%= password_field_tag "password" %>

  <%= label_tag "password_confirmation" %>
  <%= password_field_tag "password_confirmation" %>

  <!-- School user section -->
  <%= label_tag "dob", "DOB" %>
  <%= text_field_tag "dob" %>

  <%= label_tag "ssn", "SSN" %>
  <%= text_field_tag "ssn" %>
  
  <%= label_tag "gender" %>
  <%= select_tag("gender", options_for_select([['Female', 1], ['Male', 2]])) %>

  <%= label_tag "race" %>
  <%= select_tag("race_id", options_for_select([['White/Caucasian', 1], ['Black/African American', 2], ['Hispanic', 3],
                                                ['American Indian or Alaska Native', 4], ['Asian', 5],
                                                ['Hawaiian Native or other Pacific Islander', 6], ['Multi-racial', 7], ['Other', 8]], ['Asian', 5])) %>
  
  <%= label_tag "education_level", "Education" %>
  <%= select_tag("education_level_id", options_for_select([['Less than high school graduation', 11], ['GED', 12], ['High school graduate', 13],
                                                ['Some post high school, no degree or certificate', 14], ['Certificate (less than two years)', 15],
                                                ['Associate Degree', 16], ['Bachelors Degree', 17], ['Masters Degree', 18], ['Doctoral Degree or above', 19],
                                                ['Other', 90]
                                                ], ['Other', 90])) %>

  <%= label_tag "school" %>
  <%= select_tag("school_id", options_for_select([['Vuu Beauty School', 1], ['Tim Beauty School', 2]])) %>

  <%= label_tag "study_program", "Study Program" %>
  <%= select_tag("study_program", options_for_select([['Cosmetology', "Cosmetology"], ['Manicurist', "Manicurist"], ['Esthetician', "Esthetician"],
                                                      ['Barber', "Barber"], ['Instructor', "Instructor"]], ['Manicurist', "Manicurist"])) %>

  <%= label_tag "tuition" %>
  <%= number_field_tag "tuition", nil, min: 0, max: 20000, step: 100 %>

  <%= label_tag "enrollment_date", "Enrollment Date" %>
