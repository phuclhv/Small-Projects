<% provide(:title, 'School Info') %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.full_name %>
      </h1>
    </section>
  </aside>
</div>

<h1>School Info</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
      <%= render @school %>
  </table>
</div>


