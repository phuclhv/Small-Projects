<%= form_for(@address) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :street %>
  <%= f.text_field :street, class: 'form-control' %>

  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>

  <%= f.label :state_id, "State" %>
  <%= f.collection_select(:state_id, State.all, :id, :description) %>

  <%= f.label :zip %>
  <%= f.text_field :zip, class: 'form-control', placeholder: "98123" %>

  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control', placeholder: "333-333-4444" %>

  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>